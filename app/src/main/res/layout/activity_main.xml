<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_goto_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="go to Login Activity" />

    <Button
        android:id="@+id/button_goto_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="go to Walking Review Activity" />

    <Button
        android:id="@+id/button_goto_dogRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="go to DogRegister" />

</LinearLayout>